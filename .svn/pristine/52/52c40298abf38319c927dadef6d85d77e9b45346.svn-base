<?php

include( 'templates.php' );

if( !isset( $_REQUEST['page'] ) ) {
	$Page = '';
}// if
else {
	$Page = $_REQUEST['page'];
}// else


if( file_exists( 'templates/'.$Page.'.htm' ) ) {
	$Content = array( 'CONTENT' => GetTemplate( 'templates/'.$Page.'.htm' ) );
}// if
else {
	$Content = array( 'CONTENT' => GetTemplate( 'templates/home.htm' ) );
}// else

// $Content = array( 'CONTENT' => GetTemplate( 'templates/home.htm' ) );
$Output = ParseTemplate( 'templates/site.htm', $Content );

echo $Output;
?>
